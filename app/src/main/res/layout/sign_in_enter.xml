<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/image_sign9957"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/toux"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_ID"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_icon"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="手机号码"
            android:layout_toRightOf="@+id/sign_ID"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_ID2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/sign_enter_password"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint=" 密码"
            android:layout_toRightOf="@+id/sign_ID2"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sign_ID3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/secr_pass"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="确认密码"
            android:layout_toRightOf="@+id/sign_ID3"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="自动登录"
            android:layout_toRightOf="@id/checkBox" />

    </RelativeLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:text="注册"
        />



</LinearLayout>