<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetpasswords"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reset_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/messaeg_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:text="重置密码"
            android:textSize="16dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/reset_phone_n"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="41dp"
        android:layout_marginLeft="41dp"
        android:textSize="10dp"
        android:hint="手机/邮箱"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/verification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:hint="验证码" />

        <Button
            android:id="@+id/reset_v_code"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignEnd="@+id/verification"
            android:layout_alignParentTop="true"
            android:background="@drawable/reset_v_b"
            android:text="发送验证码"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />


    </RelativeLayout>

    <EditText
        android:id="@+id/one_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="10dp"
        android:hint="密码"/>

    <EditText
        android:id="@+id/second_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="10dp"
        android:hint="重复密码"/>


    <Button
        android:id="@+id/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/round"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="确认重置"
        />




</LinearLayout>